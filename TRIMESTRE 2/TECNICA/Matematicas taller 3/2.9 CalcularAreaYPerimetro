Algoritmo CalcularAreaYPerimetro
    // Declaración de variables
    Definir opcion, base, altura, lado, radio como Entero;
   Definir  area, perimetro Como Real;
    
    // Mostramos el menú de opciones
    Escribir "Seleccione una figura:";
    Escribir "1. Triángulo";
    Escribir "2. Rectángulo";
    Escribir "3. Círculo";
    Leer opcion;
    
    // Procesamos la opción seleccionada
    Segun opcion Hacer
        1:
            // Pedimos los datos del triángulo
            Escribir "Ingrese la base del triángulo: ";
            Leer base;
            Escribir "Ingrese la altura del triángulo: ";
            Leer altura;
            
            // Calculamos el área y el perímetro del triángulo
            area <- (base * altura) / 2;
            perimetro <- base + (2 * (raiz((altura*altura) + (base*base)/4)));
            
            // Mostramos los resultados
            Escribir "El área del triángulo es: ", area, " de area";
            Escribir "El perímetro del triángulo es: ", perimetro, " de perimetro";
            
        2:
            // Pedimos los datos del rectángulo
            Escribir "Ingrese la base del rectángulo: ";
            Leer base;
            Escribir "Ingrese la altura del rectángulo: ";
            Leer altura;
            
            // Calculamos el área y el perímetro del rectángulo
            area <- base * altura;
            perimetro <- 2 * (base + altura);
            
            // Mostramos los resultados
            Escribir "El área del rectángulo es: ", area, " de area";
            Escribir "El perímetro del rectángulo es: ", perimetro, " de perimetro";
            
        3:
            // Pedimos los datos del círculo
            Escribir "Ingrese el radio del círculo: ";
            Leer radio;
            
            // Calculamos el área y el perímetro del círculo
            area <- pi() * radio * radio;
            perimetro <- 2 * pi() * radio;
            
            // Mostramos los resultados
            Escribir "El área del círculo es: ", area, "de area";
            Escribir "El perímetro del círculo es: ", perimetro, " de perimetro";
            
        De Otro Modo:
            Escribir "Opción inválida";
            
    FinSegun
    
FinAlgoritmo
