Algoritmo Operaciones_Matematicas
	
    //Definimos las variables a utilizar
    Definir opcion, num1, num2, resultado Como Real;
	
    //Mostramos el menú de opciones
    Escribir "Seleccione una operación matemática:";
    Escribir "1. Suma";
    Escribir "2. Resta";
    Escribir "3. Multiplicación";
    Escribir "4. División";
    Escribir "5. Módulo";
    Escribir "6. Cuadrado";
    Escribir "7. Raíz cuadrada";
    Escribir "8. Potencia";
    Escribir "9. Porcentaje";
    Escribir "10. Número aleatorio";
    Leer opcion;
	
    //Pedimos los números necesarios según la opción elegida
    Segun opcion Hacer
        1:
            Escribir "Ingrese el primer número:";
            Leer num1;
            Escribir "Ingrese el segundo número:";
            Leer num2;
            resultado <- num1 + num2;
        2:
            Escribir "Ingrese el primer número:";
            Leer num1;
            Escribir "Ingrese el segundo número:";
            Leer num2;
            resultado <- num1 - num2;
        3:
            Escribir "Ingrese el primer número:";
            Leer num1;
            Escribir "Ingrese el segundo número:";
            Leer num2;
            resultado <- num1 * num2;
        4:
            Escribir "Ingrese el primer número:";
            Leer num1;
            Escribir "Ingrese el segundo número:";
            Leer num2;
            Si num2 = 0 Entonces;
                Escribir "No se puede dividir entre cero.";
            Sino
                resultado <- num1 / num2;
            FinSi
        5:
            Escribir "Ingrese el primer número:";
            Leer num1;
            Escribir "Ingrese el segundo número:";
            Leer num2;
            resultado <- num1 % num2;
        6:
            Escribir "Ingrese el número a elevar al cuadrado:";
            Leer num1;
            resultado <- num1^2;
        7:
            Escribir "Ingrese el número del cual quiere sacar la raíz cuadrada:";
            Leer num1;
            resultado <- raiz(num1);
        8:
            Escribir "Ingrese la base:";
            Leer num1;
            Escribir "Ingrese el exponente:";
            Leer num2;
            resultado <- num1^num2;
        9:
            Escribir "Ingrese el número del cual quiere obtener el porcentaje:";
            Leer num1;
            Escribir "Ingrese el porcentaje a obtener (sin el signo %):";
            Leer num2;
            resultado <- (num1 * num2) / 100;
        10:
            resultado <- Aleatorio(1, 100);
        De Otro Modo:
            Escribir "Opción inválida.";
    FinSegun
	
    //Mostramos el resultado de la operación elegida
    Si opcion <> 10 Entonces
        Escribir "El resultado de la operación es: ", resultado;
    Sino
        Escribir "El número aleatorio es: ", resultado;
    FinSi

FinAlgoritmo
